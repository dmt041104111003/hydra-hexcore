{
    "name": "hydra-hexcore",
    "version": "0.0.1",
    "description": "Hexcore tool for Hydra",
    "author": "aniadev",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "vitest",
        "test:unit": "vitest run",
        "test:watch": "vitest --watch",
        "test:cov": "vitest --coverage",
        "test:debug": "node --inspect-brk node_modules/.bin/vitest --runInBand",
        "test:e2e": "jest -c jest-e2e.config.js --runInBand",
        "test:e2e:ci": "jest -c jest-e2e.config.js --runInBand --ci",
        "test:e2e:watch": "jest -c jest-e2e.config.js --watch --runInBand",
        "test:db:start": "docker compose -f docker-compose.test.yml up -d",
        "test:db:stop": "docker compose -f docker-compose.test.yml down",
        "test:db:logs": "docker compose -f docker-compose.test.yml logs -f",
        "typeorm": "typeorm-ts-node-esm"
    },
